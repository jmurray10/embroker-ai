# Embroker AI Insurance Chatbot Environment Variables
# Copy this file to .env and fill in your values

# OpenAI Configuration (REQUIRED)
POC_OPENAI_API=sk-...your-openai-api-key-here...
OPENAI_VECTOR_STORE_ID=vs_...your-vector-store-id...
OPENAI_MONITORING_KEY=sk-...optional-dedicated-monitoring-key...

# Pinecone Configuration (REQUIRED for vector search)
PINECONE_API_KEY=...your-pinecone-api-key...

# Slack Configuration (OPTIONAL - for human escalation)
SLACK_BOT_TOKEN=xoxb-...your-bot-token...
SLACK_APP_TOKEN=xapp-...your-app-token...
SLACK_ESCALATION_CHANNEL=escalation
SLACK_SIGNING_SECRET=...your-signing-secret...

# Session Configuration (REQUIRED - generate a strong secret)
SESSION_SECRET=your-secret-key-here-change-in-production

# Database Configuration (OPTIONAL - uses Docker PostgreSQL by default)
# DATABASE_URL=postgresql://user:password@host:5432/database

# Flask Configuration (OPTIONAL)
# FLASK_ENV=development
# FLASK_DEBUG=0

# Feature Flags (OPTIONAL)
# ENABLE_ABUSE_PREVENTION=true
# ENABLE_SLACK_ESCALATION=true

# External APIs (OPTIONAL)
# EMB_CLASSIFICATION_API_URL=https://emb-classification.onrender.com/classify